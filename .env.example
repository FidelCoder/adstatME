# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/adstatme?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI (Screenshot Verification)
OPENAI_API_KEY=sk-...

# NexusPay (Crypto Payments)
NEXUSPAY_API_KEY=
NEXUSPAY_WEBHOOK_SECRET=
NEXUSPAY_NETWORK=polygon

# M-Pesa (Kenya)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=
MPESA_PASSKEY=
MPESA_ENVIRONMENT=sandbox

# Paystack (Nigeria, Ghana)
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# Africa's Talking (SMS)
AFRICAS_TALKING_API_KEY=
AFRICAS_TALKING_USERNAME=

# Supabase Storage
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# Monitoring
SENTRY_DSN=
POSTHOG_API_KEY=

# Feature Flags
ENABLE_AI_VERIFICATION=true
ENABLE_CRYPTO_PAYOUTS=false
ENABLE_FRAUD_DETECTION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
